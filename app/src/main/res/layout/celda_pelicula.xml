<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/celdapelicula_TextView_nombrePelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Pelicula"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/celdapelicula_TextView_directorPelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director Pelicula"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/celdapelicula_TextView_fechaestrenoPelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Estreno Pelicula"
            android:textSize="15dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>